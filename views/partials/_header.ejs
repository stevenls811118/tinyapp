<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (user_id) { %>
          <a style="margin-left:28px" class="form-inline">Hi, <%= users[user_id].email %></a>
          <form method="POST" action="/logout" class="form-inline" >
            <button type="submit" style="margin-left:8px"><p6 style="color: #0265fa">Logout</p6></button>
          </form>
        <% } else { %> 
          <form method="GET" action="/login" class="form-inline">
            <button type="submit" style="margin-left:8px"><p6 style="color: #0265fa">Login</p6></button>
          </form>  
          <form method="GET" action="/register" class="form-inline">
            <button type="submit" style="margin-left:8px"><p6 style="color: #0265fa">Register</p6></button>
          </form>
        <% } %>   
      </div>
    </div>
  </nav>
</header>